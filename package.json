{
  "name": "backend-gql",
  "version": "0.0.1",
  "description": "Boilerplate for Apollo GraphQL + Prisma Backend",
  "main": "index.js",
  "scripts": {
    "generate": "pnpx prisma generate && graphql-codegen --config codegen.yml",
    "compile": "pnpm run generate && tsc -p tsconfig.json",
    "start": "pnpm run compile && node ./dist/index.js",
    "postinstall": "npm run compile",
    "watch": "concurrently  --names \"CodeGen,TS,Nodemon\" -c \"bgYellow,bgBlue,bgMagenta\" \"graphql-codegen --watch --config codegen.yml\"  \"tsc -p tsconfig.json -w\" \"nodemon ./dist/index.js\"",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix"
  },
  "author": "Ayaan Shaikh",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "pnpm": "^8.7.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "typescript": "^5.2.2"
  }
}
