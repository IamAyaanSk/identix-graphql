{
  "name": "backend-gql",
  "version": "0.0.1",
  "description": "Boilerplate for Apollo GraphQL + Prisma Backend",
  "main": "index.js",
  "scripts": {
    "generate": "pnpx prisma generate && graphql-codegen --config codegen.yml",
    "compile": "pnpm run generate && tsc -p tsconfig.json",
    "build": "pnpm run compile && docker-compose up -d && node ./dist/index.js",
    "start": "concurrently  -g --names \"CodeGen,docker,tsx\" -c \"bgYellow,bgBlue,bgMagenta\" \"graphql-codegen --config codegen.yml\" \"docker-compose up -d\"  \"node --loader tsx ./src/index.ts\"",
    "postinstall": "pnpm run compile",
    "watch": "concurrently --names \"CodeGen,docker,tsx\" -c \"bgYellow,bgBlue,bgMagenta\" \"graphql-codegen --watch --config codegen.yml\" \"docker-compose up -d\" \"tsx watch src/index.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "author": "Ayaan Shaikh",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@aws-sdk/client-ses": "^3.649.0",
    "@graphql-tools/schema": "^10.0.6",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.20.0",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@tsconfig/node16": "^16.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.16.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@parcel/watcher": "^2.3.0"
  }
}
